rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Leaderboard: public read, no client writes
    match /leaderboard/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // only server / admin updates
    }

    // Users: authenticated users can read public profile info
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Friends: users can manage their own friendships
    match /friends/{friendshipId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.user1 || request.auth.uid == resource.data.user2);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user1;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.user1 || request.auth.uid == resource.data.user2);
      allow delete: if false;
    }
  }
}
